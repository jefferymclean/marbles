<div class="mainpagebg">
<h1 id = "welcome_back">Welcome Back!</h1>
<h3>Log In</h3>
<%= form_tag session_path do %>
  <div>
    <%= label_tag "email" %><br/>
    <%= text_field_tag "email" %>
  </div>
  <div>
    <%= label_tag :password %><br/>
    <%= password_field_tag :password %>
  </div>
  <div><%= submit_tag "Log In" %></div>
<% end %>
</div>                                                                                                                    